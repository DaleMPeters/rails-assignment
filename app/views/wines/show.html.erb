<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @wine.image_url %>
</p>

<h2><%= @wine.short_description %></h2>

<p>
  <strong>Bottle size:</strong>
  <%= @wine.bottle_size %>
</p>

<p>
  <strong>Price:</strong>
  <%= @wine.price %>
</p>

<p>
  <strong>Long description:</strong>
  <%= @wine.long_description %>
</p>

<p>
  <strong>Origin country:</strong>
  <%= @wine.origin_country %>
</p>

<p>
  <strong>Company:</strong>
  <%= @wine.company %>
</p>

<p>
  <strong>Grape type:</strong>
  <%= @wine.grape_type %>
</p>

<p>
  <% if @wine.is_vegetarian %>
    Suitable for vegetarians
  <% end %>
</p>

<%= form_tag(basket_items_path(wine_id: @wine), method: "post") do %>
  <p>
    <%= number_field_tag :quantity, params[:quantity], value: "1", min: "1", required: true %>
    <%= submit_tag "Add to Basket", name: nil %>
  </p>
<% end %>
  


<%#= number_field_tag 'quantity', '1', step: '1', min: '1' %>

